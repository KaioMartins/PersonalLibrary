<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Personal Library</title>
    <meta name="description" content="Source code generated using layoutit.com">
    <meta name="author" content="LayoutIt!">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="page-header">
                            <h1>
                                Personal Library <small>A sua Biblioteca Pessoal na Internet !</small>
                            </h1>
                        </div>
                    </div>
                </div>
                <nav class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        @{
                                PersonalLibrary.Models.Usuario user = (PersonalLibrary.Models.Usuario)Session["usuario"];
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                            </button> <a class="navbar-brand" href="#">Bem-vindo, @user.Nome</a>
                        }
                        
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li >
                                <a href="/livro/index">Livros</a>
                            </li>
                            <li>
                                <a href="/autor/index">Autores</a>
                            </li>
                            <li>
                                <a href="/emprestimo/index">Empréstimos</a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mapa do sistema<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/autor/index">Autores Cadastrados</a>
                                    </li>
                                    <li>
                                        <a href="/autor/create">Cadastrar Autor</a>
                                    </li>
                                    
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="/livro/index">Livros Cadastrados</a>
                                    </li>
                                    <li>
                                        <a href="/livro/create">Cadastrar Livro</a>
                                    </li>
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="/emprestimo/index">Livros Emprestados</a>
                                    </li>
                                    <li>
                                        <a href="/emprestimo/create">Cadastrar Empréstimo</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        
                        <ul class="nav navbar-nav navbar-right">
                            
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Perfil<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        @{
                                            PersonalLibrary.Models.Usuario userEdit = (PersonalLibrary.Models.Usuario)Session["usuario"];
                                            <a href="/usuario/edit/@userEdit.UsuarioId">Editar Perfil</a>
                                        }
                                        
                                    </li>
                                                                       
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="/usuario/logoff">Sair</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                </nav>
                    <div class="col-md-12">
                        <h3 class="text-center">
                            @ViewBag.Title
                        </h3>
                        <div class="row">
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-8">

                                @if (ViewBag.Erro != null)
                                {
                                <div class="alert alert-dismissable alert-danger">

                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                        ×
                                    </button>
                                    <h4>
                                        Alerta!
                                    </h4> <strong>Aviso!</strong> @ViewBag.Erro
                                </div>
                                }

                                @RenderBody()

                            </div>
                            <div class="col-md-2">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="text-center text-muted">
                            Sistema desenvolvido para a disciplina de LP3 - Professor Henrique Dezani
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
    @Scripts.Render("~/Content/js/jquery.min.js")
    @Scripts.Render("~/Content/js/bootstrap.min.js")
    @Scripts.Render("~/Content/js/scripts.js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</html>